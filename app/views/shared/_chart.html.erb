# app/views/shared/_chart.html.erb
<div>
    <h2>Cantidad de Usuarios Registrados</h2>
    <% my_chart = User.group_by_month(:created_at, last: 3, format: "%b %Y").count %>
    <%= column_chart my_chart %>
</div>

